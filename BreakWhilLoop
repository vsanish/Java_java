BreakWhilLoop
----------------------------

package anishproj1;
import java.util.*;

public class BreakWhilLoop {
	public static void main (String[] args) {
		Scanner In = new Scanner(System.in);
		int n;
		
		while(true) {
			System.out.println("Enter the Number:");
			n = In.nextInt();
			
			if(n == 0) {
				break;
			}
			System.out.println("Enter Number is "+n);

		}
	}

}
