While  in Continue and Break
--------------------------------------

package anishproj1;
import java.util.*;


public class WhileBreakContinue {
	public static void main (String[] args) {
		Scanner sc = new Scanner(System.in);
		int n;
		
		while(true) {
			System.out.println("Enter the number:");
			n= sc.nextInt();
			
			if(n != 0) {
				System.out.println("you Entered:"+n);
				continue;
			}else {
				break;
			}
			
		}
	}

}
